<div style="max-width: 500px;">
    <BxTabs DefaultSelectedKey="1">
        @for (var i = 0; i < 50; i++)
        {
            <BxTab Key="@(i.ToString())" Value="@($"Tab Label {i}")">
                @($"Tab Label {i}")
            </BxTab>
        }
        
    </BxTabs>
</div>
