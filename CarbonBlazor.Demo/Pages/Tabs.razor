@page "/Tabs"

<BxTabs DefaultSelectedKey="1">
    <BxTab Key="1" Value="Tab Label 1">
        Tab Label 1
    </BxTab>
    <BxTab Key="2" Value="Tab Label 2">
        Tab Label 2
        <BxButton Content="Example button" />
    </BxTab>
    <BxTab Key="3" Value="Tab Label 3" Disabled>
        Tab Label 3
    </BxTab>
    <BxTab Key="4" Value="Tab Label 4 with a very long long title">
        Tab Label 4
    </BxTab>
    <BxTab Key="5" Value="Tab Label 5">
        Tab Label 5
    </BxTab>
</BxTabs>

<br />

