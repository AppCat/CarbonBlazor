@using System;
@using Volo.Abp.Identity
@using Microsoft.Extensions.Localization
@using Volo.Abp.Identity.Localization

@inject IStringLocalizer<IdentityResource> L

@(Data.As<IdentityRoleDto>().Name)

@if (Data.As<IdentityRoleDto>().IsDefault)
{
    <BxTag Type="BxTagType.Green" Margin="Margin.Is1.FromLeft">@L["DisplayName:IsDefault"]</BxTag>
}
@if (Data.As<IdentityRoleDto>().IsPublic)
{
    <BxTag Type="BxTagType.Gray" Margin="Margin.Is1.FromLeft">@L["DisplayName:IsPublic"]</BxTag>
}